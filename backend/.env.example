APP_NAME="Secure Full-Stack App"
APP_ENV=production
APP_KEY=
APP_DEBUG=false
APP_URL=https://yourdomain.com
APP_PORT=8000

# Frontend URL for CORS
FRONTEND_URL=https://yourdomain.com

# Database Configuration
DB_CONNECTION=pgsql
DB_HOST=db
DB_PORT=5432
DB_DATABASE=secure_app
DB_USERNAME=app_user
DB_PASSWORD=
DB_SSLMODE=require

# Redis Cache & Queue
REDIS_HOST=redis
REDIS_PASSWORD=null
REDIS_PORT=6379

# Cache Configuration
CACHE_DRIVER=redis
CACHE_TTL=3600

# Queue Configuration
QUEUE_CONNECTION=redis
QUEUE_TIMEOUT=60

# Session Configuration
SESSION_DRIVER=cookie
SESSION_LIFETIME=60
SESSION_DOMAIN=yourdomain.com
SESSION_SECURE_COOKIES=true
SESSION_HTTP_ONLY=true
SESSION_SAME_SITE=strict

# Mail Configuration
MAIL_MAILER=smtp
MAIL_HOST=smtp.mailtrap.io
MAIL_PORT=2525
MAIL_USERNAME=
MAIL_PASSWORD=
MAIL_ENCRYPTION=tls
MAIL_FROM_ADDRESS="noreply@yourdomain.com"
MAIL_FROM_NAME="${APP_NAME}"

# Sanctum Settings
SANCTUM_STATEFUL_DOMAINS=yourdomain.com,www.yourdomain.com
SANCTUM_COOKIE_NAME=sanctum_api_token
SANCTUM_COOKIE_SECURE=true
SANCTUM_COOKIE_HTTP_ONLY=true
SANCTUM_COOKIE_SAME_SITE=strict
SANCTUM_TOKEN_EXPIRATION=1440

# API Configuration
API_VERSION=v1

# Security Settings
CSP_ENABLED=true
HSTS_ENABLED=true
HSTS_MAX_AGE=63072000
HSTS_INCLUDE_SUBDOMAINS=true
HSTS_PRELOAD=true
X_FRAME_OPTIONS=DENY
X_CONTENT_TYPE_OPTIONS=nosniff
REFERRER_POLICY=strict-origin-when-cross-origin

# Rate Limiting
RATE_LIMIT_AUTHENTICATED=60,1
RATE_LIMIT_UNAUTHENTICATED=15,1
RATE_LIMIT_LOGIN=5,1
RATE_LIMIT_API=100,1

# File Upload
FILE_UPLOAD_MAX_SIZE=10

# Password Policy
PASSWORD_MIN_LENGTH=12
PASSWORD_HISTORY_COUNT=5

# Token Management
TOKEN_EXPIRATION_HOURS=24
TOKEN_REFRESH_BEFORE_MINUTES=60

# Audit Logging
AUDIT_LOGGING_ENABLED=true
AUDIT_LOG_RETENTION=90

# Error Logging
LOG_CHANNEL=single
LOG_LEVEL=warning
LOG_SLACK_WEBHOOK_URL=

# Sentry (Error Tracking) - Optional
SENTRY_LARAVEL_DSN=

# Two-Factor Authentication (Optional)
TWO_FACTOR_ENABLED=false
TWO_FACTOR_PROVIDER=totp

# IP Whitelisting (Optional)
IP_WHITELIST_ENABLED=false
WHITELISTED_IPS=

# AWS S3 (If using for file storage)
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_DEFAULT_REGION=us-east-1
AWS_BUCKET=
AWS_URL=

# Miscellaneous
DEBUGBAR_ENABLED=false
TELESCOPE_ENABLED=false
